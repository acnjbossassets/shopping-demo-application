<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
	xmlns:camel="http://camel.apache.org/schema/blueprint" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:cxf="http://camel.apache.org/schema/blueprint/cxf"
	xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
       http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd">

	<!--Web/Rest Services Beans Start -->

	<cxf:cxfEndpoint id="productAddition" address="${webservices.url}"
		serviceClass="com.redhat.shopping.demo.application.camel.ws.AddNewProducts" />

	<cxf:rsServer id="rsServer" address="${restservices.url}"
		serviceClass="com.redhat.shopping.demo.application.camel.rest.ShoppingHomeService" />

	<bean id="restRouteProcessor"
		class="com.redhat.shopping.demo.application.camel.beans.RestRouteProcessor" />

	<bean id="addProductRouteRef"
		class="com.redhat.shopping.demo.application.camel.routes.AddProductRoute">
	</bean>
		
	<bean id="buyNewProduct"
		class="com.redhat.shopping.demo.application.camel.routes.BuyNewProduct" />

	<!-- End -->


	<!-- Gauth Related Beans Start -->
	<bean id="gauth" class="org.apache.camel.component.gae.auth.GAuthComponent">
		<property name="consumerKey" value="${gauth.consumerKey}" />
		<property name="consumerSecret" value="${gauth.consumerSecret}" />
	</bean>

	<bean id="gauthRouteBuilder"
		class="com.redhat.shopping.demo.application.camel.routes.GauthRouteBuilder">
		<property name="authorizeUrl" value="${gauth.authorizeUrl}"></property>
		<property name="handlerLocation" value="${gauth.handlerLocation}"></property>
		<property name="consumerUrl" value="${gauth.consumerUrl}"></property>
	</bean>
	
	<bean id="jetty" class="org.apache.camel.component.jetty.JettyHttpComponent"/>

	<!-- Gauth Related Beans End -->

	<!-- configuring activemq Start -->
	<bean id="activemq" class="org.apache.activemq.camel.component.ActiveMQComponent">
	 <property name="brokerURL" value="vm://localhost"/>
		<!-- <property name="brokerURL" value="${activemq.brokerUrl}" />
		<property name="userName" value="${activemq.user}" />
		<property name="password" value="${activemq.password}" /> -->
	</bean>
	<!-- Configuring activemq End -->

	<!-- this is the JDBC data source Config for mysql database -->
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource"
		destroy-method="close">
		<property name="driverClassName" value="${database.driverClassName}" />
		<property name="url" value="${database.url}" />
		<property name="username" value="${database.username}" />
		<property name="password" value="${database.password}" />
	</bean>

	<!-- configure the Camel SQL component to use the JDBC data source -->
	<bean id="sql" class="org.apache.camel.component.sql.SqlComponent">
		<property name="dataSource" ref="dataSource" />
	</bean>


	<!-- Other Beans -->
	<bean id="logProductFetchTime"
		class="com.redhat.shopping.demo.application.camel.beans.LogProductFetchTime" />
	
	<bean id="salesForceProductProcessor"
		class="com.redhat.shopping.demo.application.camel.beans.SalesForceProductProcessor" />

	<!-- End -->

</blueprint>
